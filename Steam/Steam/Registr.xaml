<Window x:Class="Steam.Registr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steam"
        mc:Ignorable="d"
        Title="Registr" Height="500" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Border CornerRadius="20" BorderBrush="Transparent" Background="#00adee">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Фото профиля -->
                <Border Grid.Row="0" Width="100" Height="100" CornerRadius="50" 
                BorderBrush="LightGray" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image x:Name="ProfileImage" Stretch="UniformToFill"/>
                </Border>

                <!-- Основные поля -->
                <Label Grid.Row="1" Content="Логин:"/>
                <TextBox Grid.Row="2" x:Name="LoginTextBox"  Margin="0,0,0,10"/>

                <Label Grid.Row="3" Content="Пароль:"/>
                <PasswordBox Grid.Row="4" x:Name="PasswordBox" Margin="0,0,0,10"/>

                <Label Grid.Row="5" Content="Никнейм:"/>
                <TextBox Grid.Row="6" x:Name="NicknameTextBox" Margin="0,0,0,10"/>

                <Label Grid.Row="7" Content="Email (адрес):"/>
                <TextBox Grid.Row="8" x:Name="EmailTextBox" Margin="0,0,0,10"/>

                <Label Grid.Row="9" Content="Год рождения:"/>
                <DatePicker Grid.Row="10" x:Name="BirthDatePicker" Margin="0,0,0,20"/>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" RenderTransformOrigin="0.508,0.585" Margin="0,90,0,-90">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" Background="Aqua"/>
                    <Button x:Name="CancelButton" Content="Закрыть" Width="100" Click="CancelButton_Click" Background="Aqua"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
