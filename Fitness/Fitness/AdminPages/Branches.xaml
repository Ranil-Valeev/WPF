<Page x:Class="Fitness.AdminPages.Branches"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Branches">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Выбор филиала -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Филиал:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="BranchesComboBox" Width="300" 
                      SelectionChanged="BranchesComboBox_SelectionChanged" 
                      DisplayMemberPath="Название"/>
        </StackPanel>

        <!-- Поля для редактирования -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Название:" Margin="5" Width="100"/>
            <TextBox x:Name="NameTextBox" Margin="5" Width="300"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Адрес:" Margin="5" Width="100"/>
            <TextBox x:Name="AddressTextBox" Margin="5" Width="300"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Контактный телефон:" Margin="5" Width="100"/>
            <TextBox x:Name="PhoneTextBox" Margin="5" Width="300"/>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,372,10,10">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" 
                    Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="NewButton" Content="Новый" Width="100" Margin="0,0,10,0" 
                    Click="NewButton_Click" Background="LightBlue"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" 
                    Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
