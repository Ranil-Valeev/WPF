<Page x:Class="Учебное_Заведение.Student_pages.grades"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Student_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="grades">

    <Grid Background="Aqua" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Мои оценки"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#0078D7"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1"
                BorderBrush="#0078D7"
                Background="White"
                BorderThickness="2"
                CornerRadius="10"
                Padding="10">
            <!-- Оборачиваем DataGrid в ScrollViewer -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="GradesGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          AlternatingRowBackground="#E9F3FB"
                          FontSize="15"
                          RowHeight="60"
                          CanUserResizeRows="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding Предмет}" Width="2*"/>
                        <DataGridTextColumn Header="Оценки" Binding="{Binding Оценки}" Width="4*"/>
                        <DataGridTextColumn Header="Средний балл" Binding="{Binding Средний}" Width="1*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
