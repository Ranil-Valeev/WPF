<Window x:Class="Magnit.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magnit"
        mc:Ignorable="d"
        Title="Admin" Height="600" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent"  >
    <Border CornerRadius="20" BorderBrush="Transparent" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Margin="30,30,30,30" x:Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Column="1">

            </Frame>
            <StackPanel x:Name="ST_Dobro" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock  Text="Добро пожаловать !" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="Red"/>
            </StackPanel>

            <Image Source="C:\Users\User\Documents\STUDY\УП\WpfApp2\Иконки\Minimize Window 1.png" x:Name="Minimize" Width="20" Height="20" MouseDown="Minimize_MouseDown" Grid.Column="1" Margin="534,3,46,577" />
            <Image Source="C:\Users\User\Documents\STUDY\УП\WpfApp2\Иконки\Close Window 1.png" Width="20" Height="20" Margin="554,3,26,577" Grid.Column="1" x:Name="Close" MouseDown="Close_MouseDown" />
            <Border CornerRadius="20" BorderBrush="Transparent" Background="Red">
                <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10" Width="180">
                    <Image Source="C:\Users\User\Documents\STUDY\УП\WpfApp2\Иконки\Group 1.png"  x:Name="Group" MouseDown="Group_MouseDown" Height="20" Width="20" HorizontalAlignment="Right"  />
                    <StackPanel >
                        <Image Source="C:\Users\User\Documents\STUDY\УП\Magnit\Magnit\Magnit.jpg" Height="120" />
                        <StackPanel Height="357" Width="180"  >
                            <Button Height="40" Margin="10,50,10,0"   Background="Black" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Profile" Click="Profile_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                         Background="Pink">
                                            <TextBlock Text="Клиенты" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"  />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="Pink" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Service" Click="Service_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                         Background="Pink">
                                            <TextBlock Text="Заказы" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="Pink" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Record" Click="Record_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                         Background="Pink">
                                            <TextBlock Text="Товары" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="Pink" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Kontact" Click="Kontact_Click" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                            Background="Pink">
                                            <TextBlock Text="Производители" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="Pink" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Categorii" Click="Categorii_Click" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10" Background="Pink">
                                            <TextBlock Text="Категории" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <StackPanel>
                            <Button Height="40" Margin="10,0,10,0" Background="#FFA73A" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="EXIT" Click="EXIT_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                        Background="Pink">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="C:\Users\User\Documents\STUDY\УП\WpfApp2\Иконки\Open Door.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="20" Height="20"/>
                                                <TextBlock Text="Выйти" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
