<Page x:Class="WpfApp2.Pages.Records1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Records1">

    <Grid Background="#FFE7">
        <DataGrid x:Name="RecordsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Услуги.Наименование_услуги}" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Начало_оказания_услуги}" Width="*"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Сотрудник.Фамилия}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Статус}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
