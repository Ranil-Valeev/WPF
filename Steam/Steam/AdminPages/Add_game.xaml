<Page x:Class="Steam.AdminPages.Add_game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_game">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Комбобокс для выбора игры -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Label Content="Выберите игру:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="GamesComboBox" Width="300" 
                      SelectionChanged="GamesComboBox_SelectionChanged"
                      DisplayMemberPath="Название"/>
        </StackPanel>

        <!-- Основные поля -->
        <Label Grid.Row="1" Grid.Column="0" Content="Название:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TitleTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Локализация:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="LocalizationTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Дата релиза:" Margin="0,0,5,5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" x:Name="ReleaseDatePicker" Margin="0,0,0,5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Дата региона:" Margin="0,0,5,5"/>
        <DatePicker Grid.Row="4" Grid.Column="1" x:Name="RegionDatePicker" Margin="0,0,0,5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Платформы:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="PlatformsTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Жанры:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="GenresTextBox" Margin="0,0,0,5"/>

        <!-- ComboBox для связей -->
        <Label Grid.Row="7" Grid.Column="0" Content="Разработчик:" Margin="0,0,5,5"/>
        <ComboBox Grid.Row="7" Grid.Column="1" x:Name="DeveloperComboBox" DisplayMemberPath="Название" Margin="0,0,0,5"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Издатель:" Margin="0,0,5,5"/>
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="PublisherComboBox" DisplayMemberPath="Название" Margin="0,0,0,5"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Возрастной рейтинг:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="9" Grid.Column="1" x:Name="AgeRatingTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="10" Grid.Column="0" Content="Системные требования:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="SystemRequirementsTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="11" Grid.Column="0" Content="Описание:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="11" Grid.Column="1" x:Name="DescriptionTextBox" Margin="0,0,0,5" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="12" Grid.Column="0" Content="Среднее время прохождения:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="12" Grid.Column="1" x:Name="AverageTimeTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="13" Grid.Column="0" Content="Тип издания:" Margin="0,0,5,5"/>
        <ComboBox Grid.Row="13" Grid.Column="1" x:Name="EditionTypeComboBox" DisplayMemberPath="Название" Margin="0,0,0,5"/>

        <Label Grid.Row="14" Grid.Column="0" Content="Статус:" Margin="0,0,5,5"/>
        <ComboBox Grid.Row="14" Grid.Column="1" x:Name="StatusComboBox" DisplayMemberPath="Название" Margin="0,0,0,5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="17" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="NewButton" Content="Новый" Width="100" Margin="0,0,10,0" Click="NewButton_Click" Background="Aqua"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="0,0,10,0" Click="DeleteButton_Click" Background="Aqua"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Click="CancelButton_Click" Background="Aqua" />
        </StackPanel>
    </Grid>
</Page>