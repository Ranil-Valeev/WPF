<Page x:Class="Steam.Pages.Gamedetal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Gamedetal">

    <ScrollViewer Padding="10">
        <StackPanel>
            <TextBlock Text="{Binding Название}" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>
            <Image Source="{Binding GetPhoto}" Width="200" Height="200" Margin="0 0 0 10"/>
            <TextBlock Text="Жанры:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Жанры}" Margin="0 0 0 10"/>
            <TextBlock Text="Платформы:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Платформы}" Margin="0 0 0 10"/>
            <TextBlock Text="Дата релиза:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Дата_релиза, StringFormat=d}" Margin="0 0 0 10"/>
            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Описание}" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock Text="Возростной рейтинг:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Возростной_рейтинг}" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock Text="Среднее время прохождения:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Среднее_время}" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock Text="Системные требования:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Системные_требования}" TextWrapping="Wrap" Margin="0 0 0 10"/>
        </StackPanel>
    </ScrollViewer>
</Page>
