<Page x:Class="Magnit.AdminPages.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magnit.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Orders">

    <Grid>
        <DataGrid x:Name="OrdersGrid"
                 AutoGenerateColumns="False"
                 Background="White"
                 HeadersVisibility="Column"
                 IsReadOnly="True"
                 Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding ID_заказа}" Width="Auto"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Дата, StringFormat=dd.MM.yyyy}" Width="*"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Время}" Width="*"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Колличество}" Width="*"/>
                <DataGridTextColumn Header="Покупатель" Binding="{Binding Пользователь.Фамилия}" Width="*"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding Товар.название}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
