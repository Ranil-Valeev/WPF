<Page x:Class="Fitness.AdminPages.Rec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rec">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список рекомендаций -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Рекомендация:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="RecommendationsComboBox" Width="300" 
                      SelectionChanged="RecommendationsComboBox_SelectionChanged"
                      DisplayMemberPath="Id_рекомендации"/>
        </StackPanel>

        <!-- Основная тренировка -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Основная тренировка:" Margin="5" Width="150"/>
            <ComboBox x:Name="MainTrainingComboBox" Margin="5" Width="300"
                      DisplayMemberPath="Название"
                      SelectedValuePath="Id_тренеровки"/>
        </StackPanel>

        <!-- Рекомендуемая тренировка -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Рекомендуемая тренировка:" Margin="5" Width="150"/>
            <ComboBox x:Name="RecommendedTrainingComboBox" Margin="5" Width="300"
                      DisplayMemberPath="Название"
                      SelectedValuePath="Id_тренеровки"/>
        </StackPanel>

        <!-- Причина рекомендации -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Причина рекомендации:" Margin="5" Width="150"/>
            <TextBox x:Name="ReasonTextBox" Margin="5" Width="300" Height="60"
                     TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" 
                    Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="NewButton" Content="Новый" Width="100" Margin="0,0,10,0" 
                    Click="NewButton_Click" Background="Aqua"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" 
                    Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
