<Page x:Class="Fitness.Pages.Rec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rec">

    <Grid>
        <StackPanel>
            <TextBlock Text="Рекомендованные тренировки для клиента:" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="RecommendationsListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="{Binding Тренировки1.Название}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Причина}" FontStyle="Italic" FontSize="12" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>
