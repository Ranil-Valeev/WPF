<Page x:Class="Steam.Pages.Review"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Review">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ваш отзыв о игре" FontSize="20" Margin="0 0 0 10"/>

        <StackPanel Grid.Row="1"  >
            <TextBlock Text="Рецензия:"/>
            <TextBox x:Name="ReviewTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>

            <TextBlock Text="Рейтинг (0-10):"/>
            <TextBox x:Name="RatingTextBox" Width="50" />
        </StackPanel>

        <Button Grid.Row="2" Content="Отправить" Width="120" Height="30"
                HorizontalAlignment="Right" Click="SubmitButton_Click" Margin="0 10 0 0"/>
    </Grid>
</Page>
