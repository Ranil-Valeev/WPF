<Page x:Class="Fitness.AdminPages.Records"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Records">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Записи на тренировки" 
               FontSize="18" FontWeight="Bold" 
               Margin="10" HorizontalAlignment="Center"/>

        <!-- DataGrid -->
        <DataGrid x:Name="ActionsDataGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserResizeRows="False"
              GridLinesVisibility="Horizontal"
              HeadersVisibility="Column"
              SelectionMode="Extended"
              Margin="10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID записи" 
                              Binding="{Binding Id_журнала}" 
                              Width="80"
                              CanUserSort="True"/>

                <DataGridTextColumn Header="Логин клиента" 
                              Binding="{Binding Логин}" 
                              Width="150"
                              CanUserSort="True"/>

                <DataGridTextColumn Header="Email" 
                              Binding="{Binding Email}" 
                              Width="200"
                              CanUserSort="True"/>

                <DataGridTextColumn Header="Действие" 
                              Binding="{Binding Действие}" 
                              Width="180"
                              CanUserSort="True"/>

                <DataGridTextColumn Header="Дата и время" 
                              Binding="{Binding Дата_и_время}" 
                              Width="150"
                              CanUserSort="True"/>
            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</Page>
