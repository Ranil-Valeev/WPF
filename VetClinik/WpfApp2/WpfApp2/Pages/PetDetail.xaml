<Page x:Class="WpfApp2.Pages.PetDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="PetDetail">
    <Border CornerRadius="20" BorderBrush="Transparent" Background="{StaticResource GradientBackground}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фото питомца -->
            <Image Name="PetPhoto" Width="180" Height="180" Stretch="UniformToFill" Margin="10" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" />

            <!-- Информация -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Мой питомец" FontSize="20" FontWeight="Bold" Foreground="Green" Margin="0,0,0,10"/>

                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <TextBlock Text="Кличка питомца:" FontWeight="Bold"/>
                    <TextBlock Name="PetName"/>

                    <TextBlock Text="Вид питомца:" FontWeight="Bold"/>
                    <TextBlock Name="PetType"/>

                    <TextBlock Text="Порода:" FontWeight="Bold"/>
                    <TextBlock Name="PetBreed"/>

                    <TextBlock Text="Пол питомца:" FontWeight="Bold"/>
                    <TextBlock Name="PetGender"/>

                    <TextBlock Text="Дата рождения:" FontWeight="Bold"/>
                    <TextBlock Name="PetBirthDate"/>

                    <TextBlock Text="Вес:" FontWeight="Bold"/>
                    <TextBlock Name="PetWeight"/>
                </UniformGrid>

                <TextBlock Text="Владелец" FontSize="18" FontWeight="Bold" Foreground="#B8860B" Margin="0,10,0,5"/>

                <UniformGrid Columns="2">
                    <TextBlock Text="Фамилия Имя Отчество:" FontWeight="Bold"/>
                    <TextBlock Name="OwnerFullName"/>

                    <TextBlock Text="Номер телефона:" FontWeight="Bold"/>
                    <TextBlock Name="OwnerPhone"/>

                    <TextBlock Text="Электронная почта:" FontWeight="Bold"/>
                    <TextBlock Name="OwnerEmail"/>

                    <TextBlock Text="Адрес проживания:" FontWeight="Bold"/>
                    <TextBlock Name="OwnerAddress"/>

                    <TextBlock Text="Дата рождения:" FontWeight="Bold"/>
                    <TextBlock Name="OwnerBirthDate"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
