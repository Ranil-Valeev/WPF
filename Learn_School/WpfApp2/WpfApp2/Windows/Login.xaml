<Window x:Class="WpfApp2.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#FFE7"/>
        <Image Source="C:\Users\User\Documents\STUDY\Разработка кода ИС\WpfApp1\WpfApp1\Resources\Image1.jpg" Margin="10" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="0" Text="Авторизация" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Логин" Margin="20,0" VerticalAlignment="Center" Width="100"></TextBlock>
            <TextBox x:Name="TbLogin" Grid.Column="1" Width="200" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Пароль" Margin="20,0" VerticalAlignment="Center" Width="100" Grid.Column="0"></TextBlock>
            <PasswordBox x:Name="TbPass" Height="30" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Width="100" Height="30" Name="BtnOk" Content="OK" Background="Aqua" Click="BtnOk_Click" Margin="5,0"></Button>
            <Button Width="100" Height="30" x:Name="BtnCansel" Content="Cansel" Background="Aqua" Click="BtnCansel_Click" Margin="5,0"></Button>
            <Button Width="100" Height="30" x:Name="Gost" Content="Войти как гость" Background="Aqua" Click="Gost_Click" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
