<Page x:Class="Справочник_Книг.Admin_pages.AddGenre"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddGenre">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Выбор жанра -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <Label Content="Выберите жанр:" VerticalAlignment="Center"/>
            <ComboBox x:Name="GenreComboBox"
                      Width="250"
                      Margin="10,0,0,0"
                      DisplayMemberPath="Название"
                      SelectionChanged="GenreComboBox_SelectionChanged"/>
        </StackPanel>

        <Label Grid.Row="1" Content="Название жанра:"/>
        <TextBox x:Name="GenreNameTextBox" Grid.Row="2" Margin="0,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="120" Margin="5" Click="SaveButton_Click" Background="Aqua"/>
            <Button Content="Новый" Width="120" Margin="5" Click="NewButton_Click" Background="Aqua"/>
            <Button Content="Удалить" Width="120" Margin="5" Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
