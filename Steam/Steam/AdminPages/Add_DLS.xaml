<Page x:Class="Steam.AdminPages.Add_DLS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_DLS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля для ввода данных -->
        <Label Grid.Row="0" Content="Игра:"/>
        <ComboBox Grid.Row="1" x:Name="GameComboBox" DisplayMemberPath="Название" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="Название контента:"/>
        <TextBox Grid.Row="3" x:Name="TitleTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="4" Content="Тип контента:"/>
        <TextBox Grid.Row="5" x:Name="ContentTypeTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="6" Content="Описание:"/>
        <TextBox Grid.Row="7" x:Name="DescriptionTextBox" Margin="0,0,0,10" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="8" Content="Дата выпуска:"/>
        <DatePicker Grid.Row="9" x:Name="ReleaseDatePicker" Margin="0,0,0,10"/>

        <Label Grid.Row="10" Content="Цена:"/>
        <TextBox Grid.Row="11" x:Name="PriceTextBox" Margin="0,0,0,20"/>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Click="CancelButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
