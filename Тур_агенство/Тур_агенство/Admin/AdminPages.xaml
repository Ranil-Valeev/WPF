<Window x:Class="Тур_агенство.Admin.AdminPages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Тур_агенство.Admin"
        mc:Ignorable="d"
        Title="AdminPages" Height="600" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#f6f6f6">
    <Grid>
        <Border Background="#2C3E50" Height="40" VerticalAlignment="Top">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <TextBlock Text="Турагентство — admin" Foreground="White" Margin="10" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" Click="Minimize_Click" Cursor="Hand">
                        <Image Source="/Minimize_Window.png"/>
                    </Button>
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" Click="Close_Click" Cursor="Hand">
                        <Image Source="/Close_Window.png"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>


        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Background="#2C3E50" Grid.Column="0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Image Source="/Icon.png" Width="100" Height="100" Margin="0,20,0,30"/>
                    <TextBlock Text="Меню" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Button x:Name="ToursBtn" Content="Туры"
                        Width="160" Height="40" Margin="0,5"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand" FontSize="16"
                        Click="ToursBtn_Click"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeave"/>

                    <Button x:Name="CityBtn" Content="Город"
                        Width="160" Height="40" Margin="0,5"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand" FontSize="16"
                        Click="CityBtn_Click"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeave"/>
                    <Button x:Name="CountryBtn" Content="Страна"
                    Width="160" Height="40" Margin="0,5"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0" Cursor="Hand" FontSize="16"
                    Click="CountryBtn_Click"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave"/>

                    <Button x:Name="ProfileBtn" Content="Клиент"
                        Width="160" Height="40" Margin="0,5"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand" FontSize="16"
                        Click="ProfileBtn_Click"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeave"/>

                    <Button x:Name="ExitBtn" Content="Выход"
                        Width="160" Height="40" Margin="0,40,0,0"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand" FontSize="16"
                        Click="ExitBtn_Click"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeave"/>
                </StackPanel>
            </Border>


            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="White"/>
        </Grid>
    </Grid>
</Window>
