<Page x:Class="Magnit.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magnit.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Profile">

    <Border CornerRadius="20" Background="White" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Мой профиль" 
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Основная информация -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Аватар и основная информация -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding FullName}" 
                                           FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Email}" 
                                           Margin="0,5,0,0" Foreground="#444"/>
                        </StackPanel>
                    </Grid>

                    <!-- Детали профиля -->
                    <Border Background="White" CornerRadius="10" Padding="15" Height="331">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32.43"/>
                                <ColumnDefinition Width="64.727"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Фамилия -->
                            <TextBlock Text="Фамилия:" Grid.Row="0" Grid.Column="0"
                                           Margin="0,0,10,10" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding LastName}" Grid.Row="0" Grid.Column="1"
                                           Margin="65,0,0,10" FontWeight="SemiBold" Grid.ColumnSpan="2"/>

                            <!-- Имя -->
                            <TextBlock Text="Имя:" Grid.Row="1" Grid.Column="0"
                                           Margin="0,0,10,10" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding FirstName}" Grid.Row="1" Grid.Column="1"
                                           Margin="65,0,0,10" FontWeight="SemiBold" Grid.ColumnSpan="2"/>

                            <!-- Отчество -->
                            <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0"
                                           Margin="0,0,10,10" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding MiddleName}" Grid.Row="2" Grid.Column="1"
                                           Margin="65,0,0,10" FontWeight="SemiBold" Grid.ColumnSpan="2"/>

                            <!-- Телефон -->
                            <TextBlock Text="Телефон:" Grid.Row="3" Grid.Column="0"
                                           Margin="0,0,10,10" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding Phone}" Grid.Row="3" Grid.Column="1"
                                           Margin="65,0,0,10" FontWeight="SemiBold" Grid.ColumnSpan="2"/>

                            <!-- Пол -->
                            <TextBlock Text="Пол:" Grid.Row="4" Grid.Column="0"
                                           Margin="0,0,10,10" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding Gender}" Grid.Row="4" Grid.Column="1"
                                           Margin="65,0,0,10" FontWeight="SemiBold" Grid.ColumnSpan="2"/>

                            <!-- Дата рождения -->
                            <TextBlock Text="Дата рождения:" Grid.Row="5" Grid.Column="0"
                                           Margin="0,0,10,0" Foreground="#666" Grid.ColumnSpan="2"/>
                            <TextBlock Text="{Binding BirthDate, StringFormat=dd.MM.yyyy}" 
                                           Grid.Row="5" Grid.Column="1"
                                           FontWeight="SemiBold" Grid.ColumnSpan="2" Margin="65,0,0,0"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
