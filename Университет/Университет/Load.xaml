<Window x:Class="Университет.Load"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Университет"
        mc:Ignorable="d"
        Title="Load" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Нагрузка" FontSize="50" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <ListView x:Name="LVLoad"
            Margin="10"
            FontFamily="Comic Sans MS"
            IsSynchronizedWithCurrentItem="True">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="230"
                            DisplayMemberBinding="{Binding Преподы.Фамилия}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Фамилия" Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="230"
                            DisplayMemberBinding="{Binding Предмет.Название_предмета}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Предметы" Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="230"
                            DisplayMemberBinding="{Binding Предмет.Часы}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Объем часов" Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" Width="70" Background="Black" Foreground="White" Click="Back_Click" Grid.Row="2"/>
    </Grid>
</Window>
