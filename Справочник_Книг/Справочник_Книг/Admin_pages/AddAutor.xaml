<Page x:Class="Справочник_Книг.Admin_pages.AddAutor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAutor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <!-- Выбор автора -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Выберите автора:" VerticalAlignment="Center"/>
            <ComboBox x:Name="AuthorComboBox"
                      Width="300"
                      Margin="10,0,0,0"
                      DisplayMemberPath="Фамилия"
                      SelectionChanged="AuthorComboBox_SelectionChanged"/>
        </StackPanel>

        <Label Grid.Row="1" Content="Фамилия:"/>
        <TextBox x:Name="SurnameTextBox" Grid.Row="2" Margin="0,0,0,5"/>

        <Label Grid.Row="3" Content="Имя:"/>
        <TextBox x:Name="NameTextBox" Grid.Row="4" Margin="0,0,0,5"/>

        <Label Grid.Row="5" Content="Отчество:"/>
        <TextBox x:Name="PatronymicTextBox" Grid.Row="6" Margin="0,0,0,5"/>

        <Label Grid.Row="7" Content="Дата рождения:"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="8" Margin="0,0,0,5"/>

        <Label Grid.Row="9" Content="Страна:"/>
        <TextBox x:Name="CountryTextBox" Grid.Row="10" Margin="0,0,0,5"/>

        <Label Grid.Row="11" Content="История:"/>
        <TextBox x:Name="HistoryTextBox" Grid.Row="12" Height="100" AcceptsReturn="True" Margin="0,0,0,10"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Сохранить" Width="120" Margin="5" Click="SaveButton_Click" Background="Aqua"/>
            <Button Content="Новый" Width="120" Margin="5" Click="NewButton_Click" Background="Aqua"/>
            <Button Content="Удалить" Width="120" Margin="5" Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
