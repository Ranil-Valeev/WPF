<Page x:Class="Тур_агенство.Admin.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тур_агенство.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Client">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <Label Content="Выберите клиента:" VerticalAlignment="Center"/>
            <ComboBox x:Name="ClientComboBox" Width="350" Margin="10,0,0,0"
                  DisplayMemberPath="ФИО" SelectionChanged="ClientComboBox_SelectionChanged"/>
        </StackPanel>

        <Label Grid.Row="1" Content="ФИО:"/>
        <TextBox x:Name="FIOTextBox" Grid.Row="2" Margin="0,0,0,10"/>

        <Label Grid.Row="3" Content="Электронная почта:"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="4" Margin="0,0,0,10"/>

        <Label Grid.Row="5" Content="Телефон:"/>
        <TextBox x:Name="PhoneTextBox" Grid.Row="6" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="SaveButton_Click"/>
            <Button Content="Новый" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="NewButton_Click"/>
            <Button Content="Удалить" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
