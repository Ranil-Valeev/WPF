<Window x:Class="Учебное_Заведение.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учебное_Заведение"
        mc:Ignorable="d"
            Title="MainWindow" Height="500" Width="350" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="20" BorderBrush="Transparent" Background="#0078D7">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Icon.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="96,10,96,395" />
            <Image Source="/Exit.png" Margin="295,3,15,508" x:Name="Close" MouseDown="Close_MouseDown" />
            <StackPanel VerticalAlignment="Top" Margin="20,194,25,0" Height="379" Grid.RowSpan="2">
                <TextBlock x:Name="login" Text="Логин:" FontSize="20" Foreground="White" />
                <TextBox x:Name="Login" Height="40" Padding="10" FontSize="16" Background="White" Foreground="#0078D7" BorderThickness="0" />
                <TextBlock x:Name="pass" Text="Пароль:" FontSize="20" Foreground="White" />
                <PasswordBox x:Name="Pass" Height="40"  Padding="10" FontSize="16" Background="White" Foreground="#0078D7" BorderThickness="0" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Войти" Width="120" Height="40" Margin="5" Background="White" Foreground="#0078D7" FontSize="16" BorderThickness="0" Cursor="Hand" x:Name="Open" Click="Open_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
