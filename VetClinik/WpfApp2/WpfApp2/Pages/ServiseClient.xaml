<Page x:Class="WpfApp2.Pages.ServiseClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="ServiseClient">

    <Grid>
        <Border CornerRadius="20" BorderBrush="Transparent" Background="{StaticResource GradientBackground}">
            <ItemsControl ItemsSource="{Binding ServiceCategories}" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15" Margin="10" Background="Orange" CornerRadius="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Image Source="{Binding GetPhoto}" Width="80" Height="80" Margin="5" />
                                <TextBlock Text="{Binding Название}" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding Цена, StringFormat='от {0} руб.'}" Margin="5" HorizontalAlignment="Center" />
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Button Content="Подробнее" Click="DetailsButton_Click" CommandParameter="{Binding}"  />
                                    <Button Content="Записаться" Click="BookButton_Click" CommandParameter="{Binding}"  Margin="10,0,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Page>
