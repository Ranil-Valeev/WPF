<Page x:Class="Учебное_Заведение.Admin_pages.Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Schedule">

    <Border CornerRadius="15" Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                
            </Grid.RowDefinitions>

            <TextBlock Text="Управление расписанием"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#0078D7"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

            <!-- Выбор записи -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Выберите запись:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ScheduleComboBox"
                      Width="350"
                      Margin="10,0,0,0"
                      DisplayMemberPath="Отображение"
                      SelectedValuePath="ID_Записи"
                      SelectionChanged="ScheduleComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Группа -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,5">
                <Label Content="Группа:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="GroupComboBox"
                      Width="250"
                      DisplayMemberPath="Название_Группы"
                      SelectedValuePath="ID_Группы"/>
            </StackPanel>

            <!-- День недели -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5,0,5">
                <Label Content="День недели:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="DayComboBox" Width="250">
                    <ComboBoxItem Content="Понедельник"/>
                    <ComboBoxItem Content="Вторник"/>
                    <ComboBoxItem Content="Среда"/>
                    <ComboBoxItem Content="Четверг"/>
                    <ComboBoxItem Content="Пятница"/>
                    <ComboBoxItem Content="Суббота"/>
                </ComboBox>
            </StackPanel>

            <!-- Номер пары -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,5,0,5">
                <Label Content="Номер пары:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="PairNumberComboBox" Width="250">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>
            </StackPanel>

            <!-- Предмет -->
            <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,5,0,5">
                <Label Content="Предмет:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="SubjectComboBox"
                      Width="250"
                      DisplayMemberPath="Название_Предмета"
                      SelectedValuePath="ID_Предмета"
                      SelectionChanged="SubjectComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Преподаватель -->
            <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,5,0,5">
                <Label Content="Преподаватель:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="TeacherComboBox"
                      Width="250"
                      DisplayMemberPath="ФИО"
                      SelectedValuePath="ID_Преподавателя"/>
            </StackPanel>

            <!-- Аудитория -->
            <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="0,5,0,5">
                <Label Content="Аудитория:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="RoomTextBox" Width="250"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="120" Margin="5" Background="#0078D7" Foreground="White" Click="SaveButton_Click"/>
                <Button Content="Новая" Width="120" Margin="5" Background="#0078D7" Foreground="White" Click="NewButton_Click"/>
                <Button Content="Удалить" Width="120" Margin="5" Background="#D9534F" Foreground="White" Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
