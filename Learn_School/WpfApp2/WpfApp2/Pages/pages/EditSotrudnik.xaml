<Page x:Class="WpfApp2.Pages.EditSotrudnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="EditSotrudnik">

    <Grid  Background="#FFE7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="SotrudnikSelector" 
                  Width="300" 
                  Margin="0,0,0,20"
                  SelectionChanged="SotrudnikSelector_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Фамилия}" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Имя}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Grid.Row="1" Orientation="Vertical" Width="300">
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="LastNameBox" Margin="0,5"/>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameBox" Margin="0,5"/>
            <TextBlock Text="Отчество:"/>
            <TextBox x:Name="MiddleNameBox" Margin="0,5"/>
            <TextBlock Text="Серия и номер паспорта:"/>
            <TextBox x:Name="PassportBox" Margin="0,5"/>
            <TextBlock Text="Пол:"/>
            <TextBox x:Name="GenderBox" Margin="0,5"/>
            <TextBlock Text="Дата рождения:"/>
            <DatePicker x:Name="BirthDatePicker" Margin="0,5"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginBox" Margin="0,5"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <TextBlock Text="ID Категории:"/>
            <TextBox x:Name="CategoryBox" Margin="0,5"/>
            <Button Content="Сохранить" Margin="0,10" Click="Save_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
