<Page x:Class="Тур_агенство.User_Pages.ПрофильPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тур_агенство.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ПрофильPage">

    <Grid>
        <Border Background="White" CornerRadius="15" Width="500" Height="400"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="40" 
                >
            <StackPanel>
                <TextBlock Text="Профиль пользователя" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Имя:" FontSize="16" Foreground="#2C3E50"/>
                <TextBox x:Name="NameBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" FontSize="16" Foreground="#2C3E50"/>
                <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Телефон:" FontSize="16" Foreground="#2C3E50"/>
                <TextBox x:Name="PhoneBox" Height="30" Margin="0,0,0,20"/>

                <!--<Button Content="Сохранить изменения" Height="35" Background="#2C3E50" Foreground="White" BorderThickness="0" Cursor="Hand" Click="SaveChanges_Click"/>-->
            </StackPanel>
        </Border>
    </Grid>
</Page>
