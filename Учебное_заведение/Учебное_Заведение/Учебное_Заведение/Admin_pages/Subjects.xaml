<Page x:Class="Учебное_Заведение.Admin_pages.Subjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Subjects">

    <Border CornerRadius="12" Background="White" Padding="16" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Добавление / Редактирование предмета"
                       FontSize="20" FontWeight="Bold" Foreground="#0078D7"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Выберите предмет:" VerticalAlignment="Center"/>
                <ComboBox x:Name="SubjectComboBox" Width="300" Margin="10,0,0,0"
                          DisplayMemberPath="Название_Предмета"
                          SelectionChanged="SubjectComboBox_SelectionChanged"/>
            </StackPanel>

            <Label Grid.Row="2" Content="Название предмета:"/>
            <TextBox x:Name="SubjectNameTextBox" Grid.Row="3" Margin="0,0,0,8"/>

            <Label Grid.Row="4" Content="Преподаватель:" Margin="10"/>
            <ComboBox x:Name="TeacherComboBox" Grid.Row="4" Width="300" Margin="30,10,0,10"
                      DisplayMemberPath="ФИО" SelectedValuePath="ID_Преподавателя"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Сохранить" Width="120" Margin="6" Background="#0078D7" Foreground="White" Click="SaveButton_Click"/>
                <Button Content="Новый" Width="120" Margin="6" Background="#0078D7" Foreground="White" Click="NewButton_Click"/>
                <Button Content="Удалить" Width="120" Margin="6" Background="#D9534F" Foreground="White" Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
