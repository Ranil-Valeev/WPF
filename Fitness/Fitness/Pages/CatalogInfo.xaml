<Page x:Class="Fitness.Pages.CatalogInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="CatalogInfo">

    <Grid>
        <ScrollViewer Padding="10">
            <StackPanel>
                <TextBlock Text="{Binding Название}" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="Тип:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Тип}" Margin="0 0 0 10"/>
                <TextBlock Text="Тренер:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Тренер}" Margin="0 0 0 10"/>
                <TextBlock Text="Время проведения:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Время_проведения, StringFormat=d}" Margin="0 0 0 10"/>
                <TextBlock Text="Уникальный код:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Уникальный_код}" TextWrapping="Wrap" Margin="0 0 0 10"/>
                <TextBlock Text="Название Филиала:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Филиалы.Название}" TextWrapping="Wrap" Margin="0 0 0 10"/>
                <TextBlock Text="Адрес филиала:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Филиалы.Адрес}" TextWrapping="Wrap" Margin="0 0 0 10"/>
                <TextBlock Text="Контактный_телефон:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Филиалы.Контактный_телефон}" TextWrapping="Wrap" Margin="0 0 0 10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
