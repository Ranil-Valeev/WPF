<Window x:Class="Университет.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Университет"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация"  FontSize="80" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <TextBlock Text="Логин: " FontSize="20" VerticalAlignment="Center"/>
            <TextBox x:Name="login" VerticalAlignment="Center" Margin="50,0" Width="500" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <TextBlock Text="Пароль: " FontSize="20" VerticalAlignment="Center"/>
            <TextBox x:Name="Password" VerticalAlignment="Center" Margin="40,0" Width="500" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OK" Content="ok" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,0" Height="30" Width="100" Click="OK_Click" Background="Black" Foreground="White"/>
            <Button x:Name="Cansel" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Cansel_Click" Margin="50,0" Height="30" Width="100" Background="Black" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
