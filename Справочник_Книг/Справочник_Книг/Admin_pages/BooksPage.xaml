<Page x:Class="Справочник_Книг.Admin_pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Выбор книги -->
        <StackPanel Orientation="Horizontal">
            <Label Content="Выберите книгу:" VerticalAlignment="Center"/>
            <ComboBox x:Name="BookComboBox" Width="250" 
                      DisplayMemberPath="Название"
                      SelectionChanged="BookComboBox_SelectionChanged"
                      Margin="5,0,0,10"/>
        </StackPanel>

        <Label Grid.Row="1" Content="Название:"/>
        <TextBox x:Name="NameTextBox" Grid.Row="2" Margin="0,0,0,5"/>

        <Label Grid.Row="3" Content="Автор:"/>
        <ComboBox x:Name="AuthorComboBox" Grid.Row="4" 
                  DisplayMemberPath="Фамилия"
                  SelectedValuePath="ID_Автора"
                  Margin="0,0,0,5"/>

        <Label Grid.Row="5" Content="Жанр:"/>
        <ComboBox x:Name="GenreComboBox" Grid.Row="6" 
                  DisplayMemberPath="Название"
                  SelectedValuePath="ID_Жанра"
                  Margin="0,0,0,5"/>

        <Label Grid.Row="7" Content="Год издания:"/>
        <TextBox x:Name="YearTextBox" Grid.Row="8" Margin="0,0,0,10"/>

        <Label Grid.Row="9" Content="Описание:"/>
        <TextBox x:Name="DescTextBox" Grid.Row="10" AcceptsReturn="True" Height="100" Margin="0,0,0,10" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="NewButton" Content="Новая" Width="100" Margin="5" Click="NewButton_Click" Background="Aqua"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="5" Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
