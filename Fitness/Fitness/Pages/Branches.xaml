<Page x:Class="Fitness.Pages.Branches"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Branches">

    <Grid Background="Aqua">
        <ListBox x:Name="BranchListBox" DisplayMemberPath="Название" Background="Aqua" SelectionChanged="BranchListBox_SelectionChanged" Foreground="White"/>

        
        <StackPanel Margin="10" VerticalAlignment="Bottom">
            <TextBlock x:Name="AddressTextBlock" Foreground="White" />
            <TextBlock x:Name="PhoneTextBlock" Foreground="White" />
        </StackPanel>
    </Grid>
</Page>
