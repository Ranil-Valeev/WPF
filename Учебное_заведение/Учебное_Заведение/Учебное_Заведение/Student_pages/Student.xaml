<Window x:Class="Учебное_Заведение.Student_pages.Student"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учебное_Заведение.Student_pages"
        mc:Ignorable="d"
        Title="Student" Height="600" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent"  >
    <Border CornerRadius="20" BorderBrush="Transparent" Background="Aqua">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Margin="10,25,10,10" x:Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Column="1">

            </Frame>
            <StackPanel x:Name="ST_Dobro" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock  Text="Добро пожаловать !" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="White"/>
            </StackPanel>
            <Image Source="/Minimize_Window.png" x:Name="Minimize" Width="20" Height="20" MouseDown="Minimize_MouseDown" Grid.Column="1" Margin="534,3,46,577" />
            <Image Source="/Close_Window.png" Width="20" Height="20" Margin="554,3,26,577" Grid.Column="1" x:Name="Close" MouseDown="Close_MouseDown" />
            <Border CornerRadius="20" BorderBrush="Transparent" Background="#0078D7">
                <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10" Width="180">
                    <Image Source="/Group1.png"  x:Name="Group" MouseDown="Group_MouseDown" Height="20" Width="20" HorizontalAlignment="Right"  />
                    <StackPanel >
                        <Image Source="/icon.png" Height="120" />
                        <StackPanel Height="357" Width="180"  >
                            <Button Height="40" Margin="10,50,10,0"   Background="White" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="Profile" Click="Profile_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10" Background="White">
                                            <TextBlock Text="Профиль" Margin="5" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078D7"  />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="White" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="schedule" Click="schedule_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10" Background="White">
                                            <TextBlock Text="Расписание" Margin="5" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078D7" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="40" Margin="10,5,10,0" Background="White" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="grades" Click="grades_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10" Background="White">
                                            <TextBlock Text="Мои оценки" Margin="5" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078D7" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="attendance" Height="40" Margin="10,5,10,0" Background="White" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="attendance_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                            Background="White">
                                            <TextBlock Text="посещаемость " Margin="5" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078D7" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <StackPanel>
                            <Button Height="40" Margin="10,0,10,0" Background="#FFA73A" FontSize="16"  FontWeight="Bold" BorderThickness="0" Cursor="Hand" x:Name="EXIT" Click="EXIT_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="10"
                                        Background="White">
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="Выйти" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078D7" />
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
