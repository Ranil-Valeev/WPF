<Page x:Class="Справочник_Книг.User_Pages.UserBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="UserBooks"
      xmlns:conv="clr-namespace:Справочник_Книг.Converters">

    <Page.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>


    <Grid Margin="10">
        <StackPanel>
            <DataGrid x:Name="BooksGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="460">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="*"/>
                    <DataGridTextColumn Header="Год" Binding="{Binding Год}" Width="80"/>


                    <DataGridTemplateColumn Header="Отзыв" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Если отзыв есть -->
                                    <TextBlock Text="{Binding Отзыв}"
                           Visibility="{Binding Отзыв, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=HasValue}"
                           TextWrapping="Wrap"
                           Width="160"
                           VerticalAlignment="Center"/>
                                    <!-- Если отзыва нет -->
                                    <Button Content="Оставить отзыв"
                        Tag="{Binding ID}"
                        Click="ReviewButton_Click"
                        Visibility="{Binding Отзыв, Converter={StaticResource NullToVisibilityConverter}}"
                        Margin="8,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
