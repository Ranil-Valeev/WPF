<Window x:Class="Тур_агенство.Регистрация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Тур_агенство"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="800"
        WindowStyle="None"
        Background="#f6f6f6"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="White" CornerRadius="15" Width="400" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="ФИО" FontSize="14" Foreground="#555"/>
                <TextBox x:Name="FIOBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Электронная почта" FontSize="14" Foreground="#555"/>
                <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Телефон (пароль)" FontSize="14" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>

                <Button Content="Создать аккаунт" Height="35" Background="#2C3E50" Foreground="White" BorderThickness="0" 
                        Click="RegisterButton_Click" Cursor="Hand"/>

                <Button Content="Назад к авторизации" Click="BackButton_Click"
                        Foreground="#2C3E50" Background="Transparent" BorderThickness="0" FontWeight="Bold" Cursor="Hand" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
