            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto" MinHeight="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Запись в Ветеринарную Клинику" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория услуги:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Margin="10,0" Name="CategoryComboBox" DisplayMemberPath="Название" SelectionChanged="CategoryComboBox_SelectionChanged"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Услуга:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="10,0" Name="ServiceComboBox" DisplayMemberPath="Название" IsEnabled="False"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата:" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="3" Grid.Column="1" Margin="10,0" Name="DatePicker" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Доктор:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="4" Grid.Column="1" Margin="10,0" Name="DoctorComboBox" DisplayMemberPath="ФамилияИмяОтчество"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Время:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="5" Grid.Column="1" Margin="10,0" Name="TimeComboBox" />

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Питомец:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="6" Grid.Column="1" Margin="10,0" Name="PetComboBox" DisplayMemberPath="Кличка"/>

            
            <Button Content="Добавить" Grid.Column="1" Grid.Row="11" Width="100" Height="40" Background="#27D33D" Foreground="White" FontWeight="Bold" BorderThickness="0" x:Name="Add" HorizontalAlignment="Center" Margin="0,10,0,10" Click="Add_Click"  Cursor="Hand"/>
       
        </Grid>
