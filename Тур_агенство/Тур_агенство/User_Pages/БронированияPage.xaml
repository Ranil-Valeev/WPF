<Page x:Class="Тур_агенство.User_Pages.БронированияPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тур_агенство.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="БронированияPage">


        <Grid Margin="20">
            <TextBlock x:Name="NoBookingsText"
                   Text="У вас пока нет бронирований"
                   FontSize="20" Foreground="#2C3E50"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <ListView x:Name="BookingsList" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Тур" DisplayMemberBinding="{Binding Туры.Название}" Width="200"/>
                        <GridViewColumn Header="Дата бронирования" DisplayMemberBinding="{Binding ДатаБронирования}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    
</Page>
