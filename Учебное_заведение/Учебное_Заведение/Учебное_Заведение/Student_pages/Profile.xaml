<Page x:Class="Учебное_Заведение.Student_pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Student_pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid Background="Aqua" Margin="20">
        <Border Background="white" CornerRadius="20" Padding="30" BorderBrush="#0078D7" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

                <TextBlock Text="Профиль студента"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#0078D7"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- ФИО -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="ФИО:" 
                               FontWeight="Bold"
                               Width="180"
                               FontSize="18"
                               Foreground="#0078D7"/>
                    <TextBlock x:Name="FioText"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                </StackPanel>

                <!-- Группа -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Группа:"
                               FontWeight="Bold"
                               Width="180"
                               FontSize="18"
                               Foreground="#0078D7"/>
                    <TextBlock x:Name="GroupText"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                </StackPanel>

                <!-- Средняя оценка -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Средняя оценка:"
                               FontWeight="Bold"
                               Width="180"
                               FontSize="18"
                               Foreground="#0078D7"/>
                    <TextBlock x:Name="AverageGradeText"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                </StackPanel>

                <!-- Посещаемость -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Посещаемость:"
                               FontWeight="Bold"
                               Width="180"
                               FontSize="18"
                               Foreground="#0078D7"/>
                    <TextBlock x:Name="AttendanceText"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                </StackPanel>

 




            </StackPanel>
        </Border>
        
    </Grid>
</Page>
