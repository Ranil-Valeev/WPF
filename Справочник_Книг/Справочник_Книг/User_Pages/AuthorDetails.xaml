<Page x:Class="Справочник_Книг.User_Pages.AuthorDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="AuthorDetails">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="AuthorName" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="AuthorBio" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <TextBlock Text="Книги автора:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="BooksList" MouseDoubleClick="BooksList_MouseDoubleClick"
                     DisplayMemberPath="Название"/>
        </StackPanel>
    </Grid>
</Page>
