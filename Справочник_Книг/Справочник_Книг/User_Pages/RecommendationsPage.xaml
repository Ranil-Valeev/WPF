<Page x:Class="Справочник_Книг.User_Pages.RecommendationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecommendationsPage">

    <Grid Margin="20">
        <TextBlock Text="Рекомендованные книги" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <ListView x:Name="BooksList" MouseDoubleClick="BooksList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Название}" Width="200"/>
                    <GridViewColumn Header="Год" DisplayMemberBinding="{Binding Год_Издания}" Width="100"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Описание}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
