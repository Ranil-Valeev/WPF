<Page x:Class="Справочник_Книг.User_Pages.AllBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="AllBooks">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" >
            <TextBox x:Name="SearchTextBox"
                     Margin="10,0"
                     Width="150"
                     Height="25"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchTextBox_TextChanged"/>
            
            <ComboBox x:Name="GenreComboBox"
                      Width="100"
                      DisplayMemberPath="Название"
                      SelectedValuePath="ID_Жанра"
                      SelectionChanged="FilterChanged"
                      Margin="5"
                      />

            <ComboBox x:Name="AuthorComboBox"
                      Width="100"
                      DisplayMemberPath="Фамилия"
                      SelectedValuePath="ID_Автора"
                      SelectionChanged="FilterChanged"
                      Margin="5"
                      />

            <Button Content="Сбросить фильтры"
                    Click="ResetFilters_Click"
                    Width="150"
                    Height="25"
                    Background="White"
                    />
        </StackPanel>
        <DataGrid x:Name="BooksDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectedValuePath="ID_Книги">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="BooksDataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="2*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Автор}" Width="2*"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Жанр}" Width="1.5*"/>
                <DataGridTextColumn Header="Год" Binding="{Binding Год_Издания}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
