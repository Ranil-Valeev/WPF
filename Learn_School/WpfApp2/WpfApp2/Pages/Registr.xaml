<Page x:Class="WpfApp2.Pages.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registr">

    <Grid Background="#FFE7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Регистрация нового клиента" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Фамилия:" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="LastName" Margin="5"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Имя:" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="FirstName" Margin="5"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Отчество:" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="MiddleName" Margin="5"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Телефон:" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="Phone" Margin="5"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Email:" Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="Email" Margin="5"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Дата рождения:" Margin="5"/>
        <DatePicker Grid.Row="6" Grid.Column="1" Name="BirthDate" Margin="5"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Пол:" Margin="5"/>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <RadioButton Name="Male" Content="М" GroupName="Gender" Margin="0,0,10,0" IsChecked="True"/>
            <RadioButton Name="Female" Content="Ж" GroupName="Gender"/>
        </StackPanel>
        <Label Grid.Row="8" Grid.Column="0" Content="Логин:" Margin="5"/>
        <TextBox Grid.Row="8" Grid.Column="1" Name="Login" Margin="5"/>
        <Label Grid.Row="9" Grid.Column="0" Content="Пароль:" Margin="5"/>
        <PasswordBox Grid.Row="9" Grid.Column="1" Name="Password" Margin="5"/>
        <Label Grid.Row="10" Grid.Column="0" Content="Подтвердите пароль:" Margin="5"/>
        <PasswordBox Grid.Row="10" Grid.Column="1" Name="ConfirmPassword" Margin="5"/>
        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Name="Register" Content="Зарегистрировать" Width="150" Height="30" Click="Register_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="12" Grid.ColumnSpan="2" Name="Message" Margin="5" TextWrapping="Wrap" Foreground="Red"/>
    </Grid>
</Page>
