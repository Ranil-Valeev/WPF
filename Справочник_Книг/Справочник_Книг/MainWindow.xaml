<Window x:Class="Справочник_Книг.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Справочник_Книг"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="350" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="20" BorderBrush="Transparent" Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="362.923"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/icon.png" Margin="94,10,100,395" />
            <Image Source="Exit.png" Margin="295,3,15,508" x:Name="Close" MouseDown="Close_MouseDown" />
            <StackPanel VerticalAlignment="Top" Margin="20,194,25,0" Height="379" Grid.RowSpan="2">
                <TextBlock x:Name="login" Text="Логин:" FontSize="20" Foreground="Black" />
                <TextBox x:Name="Login" Height="40" Padding="10" FontSize="16" Background="black" Foreground="White" BorderThickness="0" />
                <TextBlock x:Name="pass" Text="Пароль:" FontSize="20" Foreground="Black" />
                <PasswordBox x:Name="Pass" Height="40"  Padding="10" FontSize="16" Background="black" Foreground="White" BorderThickness="0" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Войти" Width="120" Height="40" Margin="5" Background="black" Foreground="White" FontSize="16" BorderThickness="0" Cursor="Hand" x:Name="Open" Click="Open_Click" />
                    <Button Content="Регистрация" Width="120" Height="40" Margin="5" Background="black" Foreground="White" FontSize="16" BorderThickness="0" Cursor="Hand" x:Name="Reg" Click="Reg_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
