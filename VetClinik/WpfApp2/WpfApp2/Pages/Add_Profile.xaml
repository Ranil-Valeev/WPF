<Page x:Class="WpfApp2.Pages.Add_Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d"
      Title="Add_Profile" Height="500" Width="800">

    <Grid>
        <Border CornerRadius="20" Background="#F4C081" Padding="20">
            <Grid>


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Фамилия" Grid.Row="1" Margin="0,5"/>
                <TextBlock Text="Имя" Grid.Row="2" Margin="0,5"/>
                <TextBlock Text="Отчество" Grid.Row="3" Margin="0,5"/>
                <TextBlock Text="Номер телефона" Grid.Row="4" Margin="0,5"/>
                <TextBlock Text="Электронная почта" Grid.Row="5" Margin="0,5"/>
                <TextBlock Text="Дата рождения" Grid.Row="6" Margin="0,5"/>
                <TextBlock Text="Город" Grid.Row="7" Margin="0,5"/>
                <TextBlock Text="Улица" Grid.Row="8" Margin="0,5"/>
                <TextBlock Text="Дом" Grid.Row="9" Margin="0,5"/>
                <TextBlock Text="Квартира" Grid.Row="10" Margin="0,5"/>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                    <TextBox x:Name="LastName" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,0">
                    <TextBox x:Name="FirstName" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="3" Margin="10,0,0,0">
                    <TextBox x:Name="MiddleName" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="4" Margin="10,0,0,0">
                    <TextBox x:Name="Phone" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="5" Margin="10,0,0,0">
                    <TextBox x:Name="Email" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="6" Margin="10,0,0,0">
                    <DatePicker x:Name="BirthDate" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="7" Margin="10,0,0,0">
                    <TextBox x:Name="City" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="8" Margin="10,0,0,0">
                    <TextBox x:Name="Street" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="9" Margin="10,0,0,0">
                    <TextBox x:Name="House" Height="30" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="10" Margin="10,0,0,0">
                    <TextBox x:Name="Apartment" Height="30" Margin="0,5"/>
                </StackPanel>
  
                <Button Content="Добавить" Grid.Column="1" Grid.Row="11" Width="100" Height="40" Background="#27D33D" Foreground="White" FontWeight="Bold" BorderThickness="0" x:Name="Add" HorizontalAlignment="Center" Margin="0,10,0,10" Click="Add_Click" Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Page>
