<Page x:Class="WpfApp2.Pages.Add_Servise"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Servise">

    <Grid Background="#FFE7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Добавление новой услуги" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Наименование услуги:"/>
            <TextBox x:Name="ServiceName"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Продолжительность (мин):"/>
            <TextBox x:Name="Duration"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <Label Content="Стоимость:"/>
            <TextBox x:Name="Price"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <Label Content="Скидка (%):"/>
            <TextBox x:Name="Discount" Text="0"/>
        </StackPanel>
        <StackPanel Grid.Row="5">
            <TextBlock Text="Категория: " ></TextBlock>
            <ComboBox x:Name="servis" SelectedItem="{Binding Категории}" SelectedValuePath="ID_Услуги"  Width="284" Height="23" Margin="5,7,366,6" Grid.Column="1" Grid.Row="5">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="Услуга:" Width="Auto" HorizontalAlignment="Left" />
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="{Binding Категория}" Width="Auto" HorizontalAlignment="Left" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Загрузить изображение" Click="UploadImage_Click" Width="150"/>
            <Image x:Name="ServiceImage" Width="100" Height="100" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveService_Click" Width="100" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Page>
