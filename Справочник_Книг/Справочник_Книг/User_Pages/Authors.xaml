<Page x:Class="Справочник_Книг.User_Pages.Authors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Authors">

    <Grid>
        <DataGrid x:Name="AuthorsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="AuthorsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_Автора}" Width="60"/>
                <DataGridTextColumn Header="ФИО" Width="*">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="Фамилия"/>
                            <Binding Path="Имя"/>
                            <Binding Path="Отчество"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Страна" Binding="{Binding Страна}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
