<Page x:Class="WpfApp2.Pages.ProfileSotrudnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="ProfileSotrudnik">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель с фото -->
        <Border Grid.Column="0"  Margin="10,10,50,10" CornerRadius="10" Background="{StaticResource GradientBackground}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image x:Name="EmployeeImage" Width="200" Height="300" Stretch="UniformToFill" Source="{Binding Фото}"/>
            </StackPanel>
        </Border>
        <Border Background="{StaticResource GradientBackground}" Margin="270,10,0,10" CornerRadius="10" Padding="20" Grid.ColumnSpan="2">
            <StackPanel>
                <Border Background="#FFC864" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ФИО" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding ФИО}" TextWrapping="Wrap" Margin="0,5"/>
                    </StackPanel>
                </Border>
                <Border Background="#FFC864" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Образование" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Образование}" TextWrapping="Wrap" Margin="0,5"/>
                    </StackPanel>
                </Border>
                <Border Background="#FFC864" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Должьность" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="{Binding Должность}"/>
                            <TextBlock Text="{Binding Должность_2}"/>
                            <TextBlock Text="{Binding Должность_3}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FFC864" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Опыт работы" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Опыт}" Margin="0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
