<Page x:Class="Fitness.Pages.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Catalog">

    <Grid>
        <DataGrid x:Name="GamesDataGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal"
          RowHeight="100"
          MouseDoubleClick="GamesDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="150"/>
                <DataGridTextColumn Header="Жанры" Binding="{Binding Тип}" Width="100"/>
                <DataGridTextColumn Header="Платформы" Binding="{Binding Тренер}" Width="100"/>
                <DataGridTextColumn Header="Дата релиза" Binding="{Binding Время_проведения, StringFormat=d}" Width="100"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
