<Page x:Class="Magnit.AdminPages.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magnit.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Clients">

    <Grid>
        <DataGrid x:Name="UsersGrid"
                 AutoGenerateColumns="False"
                 Background="White"
                 HeadersVisibility="Column"
                 IsReadOnly="True"
                 Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_пользователя}" Width="Auto"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Имя}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Номер_телефона}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding электронная_почта}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
