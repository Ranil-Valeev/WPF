<Window x:Class="Magnit.Registr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magnit"
        mc:Ignorable="d"
        Title="Registr" Height="500" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Border CornerRadius="20" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Source="C:\Users\User\Documents\STUDY\УП\Magnit\Magnit\Magnit.jpg" Grid.Row="0" 
                           Width="200" Height="200"
                           HorizontalAlignment="Center" Margin="0,10"/>
                    <Label Grid.Row="1" Content="Фамилия:"/>
                    <TextBox Grid.Row="2" Name="LastName" Margin="0,0,0,5"/>
                    <Label Grid.Row="3" Content="Имя:"/>
                    <TextBox Grid.Row="4" Name="FirstName" Margin="0,0,0,5"/>
                    <Label Grid.Row="5" Content="Отчество:"/>
                    <TextBox Grid.Row="6" Name="MiddleName" Margin="0,0,0,5"/>
                    <Label Grid.Row="7" Content="Телефон:"/>
                    <TextBox Grid.Row="8" Name="Phone" Margin="0,0,0,5"/>
                    <Label Grid.Row="9" Content="Email:"/>
                    <TextBox Grid.Row="10" Name="Email" Margin="0,0,0,5"/>
                    <Label Grid.Row="11" Content="Пол:"/>
                    <ComboBox Grid.Row="12" Name="Gender" Margin="0,0,0,5">
                        <ComboBoxItem Content="Мужской"/>
                        <ComboBoxItem Content="Женский"/>
                    </ComboBox>
                    <Label Grid.Row="13" Content="Дата рождения:"/>
                    <DatePicker Grid.Row="14" Name="BirthDate" Margin="0,0,0,15"/>
                    <Label Grid.Row="15" Content="Пароль:"/>
                    <PasswordBox Grid.Row="16" Name="Password" Margin="0,0,0,15"/>
                    <StackPanel Grid.Row="17" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="Save" Content="Сохранить" Width="120" Margin="0,0,10,0" 
                                Background="Aqua" Click="Save_Click"/>
                        <Button Name="Cancel" Content="Закрыть" Width="120" 
                                Background="Aqua" Click="Cancel_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
