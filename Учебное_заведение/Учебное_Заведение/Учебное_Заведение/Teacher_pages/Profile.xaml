<Page x:Class="Учебное_Заведение.Teacher_pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Teacher_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Profile">

    <Border CornerRadius="20" BorderBrush="Transparent" Background="White" Width="540" Height="540">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Профиль преподавателя" FontSize="24" FontWeight="Bold" Foreground="#0078D7" HorizontalAlignment="Center"/>
            <StackPanel Margin="20">
                <TextBlock Text="ФИО:" FontWeight="Bold"/>
                <TextBlock x:Name="FIOText" Margin="0,0,0,10"/>
                <TextBlock Text="Логин:" FontWeight="Bold"/>
                <TextBlock x:Name="LoginText" Margin="0,0,0,10"/>
                <TextBlock Text="Роль:" FontWeight="Bold"/>
                <TextBlock x:Name="RoleText" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
