<Page x:Class="Учебное_Заведение.Student_pages.schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Student_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="schedule">

    <Grid Background="Aqua" Margin="20">
        <StackPanel>
            <TextBlock Text="Расписание занятий"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#0078D7"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Border BorderBrush="#0078D7" Background="White" BorderThickness="2" CornerRadius="10" Padding="10">
                <StackPanel Background="White">
                <DataGrid x:Name="ScheduleGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          BorderThickness="0"
                          RowHeight="70"
                          AlternatingRowBackground="#E9F3FB"
                          FontSize="14">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="День недели" Binding="{Binding День}" Width="100"/>
                        <DataGridTextColumn Header="1 пара" Binding="{Binding Пара1}" Width="*"/>
                        <DataGridTextColumn Header="2 пара" Binding="{Binding Пара2}" Width="*"/>
                        <DataGridTextColumn Header="3 пара" Binding="{Binding Пара3}" Width="*"/>
                        <DataGridTextColumn Header="4 пара" Binding="{Binding Пара4}" Width="*"/>
                        <DataGridTextColumn Header="5 пара" Binding="{Binding Пара5}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
