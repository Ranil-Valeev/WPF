<Page x:Class="WpfApp2.Pages.EditRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="EditRecordPage">

    <Grid Background="#FFE7">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="20" Grid.Row="0">
            <TextBlock Text="Редактирование записи" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Клиент:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="{Binding Клиент.Фамилия}" Width="150"/>
                <TextBlock Text="{Binding Клиент.Имя}" Width="150"/>
                <TextBlock Text="{Binding Клиент.Отчество}" Width="150"/>
            </StackPanel>

            <TextBlock Text="Услуга:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Услуги.Наименование_услуги}" Margin="0 0 0 10"/>

            <TextBlock Text="Дата и время:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Начало_оказания_услуги}" Margin="0 0 0 10"/>

            <TextBlock Text="Статус:" FontWeight="Bold"/>
            <ComboBox x:Name="StatusComboBox" Width="200" Margin="0 0 0 10"/>

            <TextBlock Text="Комментарий сотрудника:" FontWeight="Bold"/>
            <TextBox x:Name="CommentBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10" Grid.Row="1">
            <Button Content="Сохранить" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
