<Page x:Class="WpfApp2.Pages.Records"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Records">

    <Grid Background="#FFE7">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="15,15,15,24" Orientation="Vertical" Grid.Row="1">
            <TextBlock Text="Тема"  Height="16"  />
            <ComboBox Grid.Row="1" x:Name="Tema" SelectedItem="{Binding Услуги}" SelectedValuePath="ID_Тема" SelectionChanged="Tema_SelectionChanged" Width="284">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Margin="2" FontSize="16" Text="{Binding Наименование_услуги}" TextWrapping="Wrap" Width="Auto" HorizontalAlignment="Left" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="Дата" Height="15" />
            <DatePicker x:Name="DatePickerControl" SelectedDateChanged="DatePickerControl_SelectedDateChanged" Width="284" />
            <TextBlock Text="Время" Height="15" Margin="0,5,0,0"/>
            <ComboBox x:Name="TimeBox" Width="284" Height="30"
          IsEditable="False"
          SelectionChanged="TimeBox_SelectionChanged" />
            <TextBlock x:Name="NoTimeText" Text="Нет доступного времени для записи"
           Foreground="Red" Visibility="Collapsed" Margin="0,5,0,0"/>
            <TextBlock Text="Сотрудник" Height="15" />
            <ComboBox x:Name="sotrudnik" SelectedItem="{Binding Сотрудник}" SelectedValuePath="ID_Сотрудника"  SelectionChanged="sotrudnik_SelectionChanged"  Width="284" Height="23">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="Сотрудник:" Width="Auto" HorizontalAlignment="Left" />
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="{Binding Фамилия}" Width="Auto" HorizontalAlignment="Left" />
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="{Binding Имя}" Width="Auto" HorizontalAlignment="Left"/>
                            <TextBlock Margin="2" FontWeight="Bold" FontSize="14" Text="{Binding Отчество}" Width="Auto" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Width="120" Height="40" Name="BtnOk" Content="Записаться" Background="Aqua" Click="BtnOk_Click"  Margin="50"></Button>
        </StackPanel>
    </Grid>
</Page>
