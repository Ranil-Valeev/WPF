<Page x:Class="Steam.AdminPages.Add_develop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_develop">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Комбобокс для выбора разработчика -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Выберите разработчика:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="DevelopersComboBox" Width="200" 
                      SelectionChanged="DevelopersComboBox_SelectionChanged"
                      DisplayMemberPath="Название"/>
        </StackPanel>

        <!-- Поля для ввода данных -->
        <Label Grid.Row="1" Content="Название:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="2" x:Name="NameTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="3" Content="Страна:"/>
        <TextBox Grid.Row="4" x:Name="CountryTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="5" Content="Год основания:"/>
        <TextBox Grid.Row="6" x:Name="YearTextBox" Height="18" VerticalAlignment="Top"/>

        <Label Grid.Row="7" Content="Специализация:" Margin="10,12,10,20" RenderTransformOrigin="0.505,-6.3" Grid.RowSpan="2"/>
        <TextBox Grid.Row="8" x:Name="SpecializationTextBox" Margin="10,23,0,20" Grid.RowSpan="2"/>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,127,16,-152" >
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" Background="Aqua"/>
            <Button x:Name="NewButton" Content="Новый" Width="100" Margin="0,0,10,0" Click="NewButton_Click" Background="Aqua"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Click="DeleteButton_Click" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
