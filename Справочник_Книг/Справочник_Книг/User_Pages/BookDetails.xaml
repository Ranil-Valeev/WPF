<Page x:Class="Справочник_Книг.User_Pages.BookDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Справочник_Книг.User_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="BookDetails">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="BookTitle" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="BookYear" Margin="0,0,0,5"/>
            <TextBlock x:Name="BookGenre" Margin="0,0,0,15"/>
            <TextBlock x:Name="Bookhistory" Margin="0 0 0 15"/>
            <TextBlock x:Name="BookRating" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Отзывы:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="ReviewsList" DisplayMemberPath="Комментарий"/>
            <Button x:Name="ADD" Content="Добавить в прочитанные" Width="150" Margin="5" HorizontalAlignment="Right" Click="ADD_Click" VerticalAlignment="Center" Height="40" Background="white"/>
        </StackPanel>
    </Grid>
</Page>
