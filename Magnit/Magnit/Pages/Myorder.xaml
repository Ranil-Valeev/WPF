<Page x:Class="Magnit.Pages.Myorder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Magnit.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Myorder">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Информация о пользователе -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Padding="10">
            <TextBlock x:Name="lblUserInfo" 
                      TextAlignment="Center" 
                      FontWeight="Bold"
                      FontSize="16"/>
        </Border>

        <!-- Таблица заказов -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,0">
            <DataGrid x:Name="dataGridOrders"
                     AutoGenerateColumns="False"
                     Background="White"
                     HeadersVisibility="Column"
                     IsReadOnly="True"
                     GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№ Заказа" Binding="{Binding ID_заказа}" Width="*"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Дата, StringFormat=dd.MM.yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Время" Binding="{Binding Время}" Width="*"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="*"/>
                    <DataGridTextColumn Header="Товар" Binding="{Binding Товар.название}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
