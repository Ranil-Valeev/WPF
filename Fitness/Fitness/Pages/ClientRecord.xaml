<Page x:Class="Fitness.Pages.ClientRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="ClientRecord"
      xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Grid>
        <StackPanel>
            <TextBlock Text="Выберите тренировку:" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
            <ComboBox x:Name="TrainingComboBox" DisplayMemberPath="Название" />

            <TextBlock Text="Выберите дату:" Foreground="White" FontSize="16" Margin="0,20,0,5"/>
            <DatePicker x:Name="DatePicker" SelectedDate="{x:Static sys:DateTime.Today}" />

            <Button Content="Записаться" Margin="0,20,0,0" Width="120" Height="40" Background="Aqua"
                    HorizontalAlignment="Left" Click="BookButton_Click"/>

            <TextBlock x:Name="StatusTextBlock" Margin="0,20,0,0" FontSize="14" Foreground="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
