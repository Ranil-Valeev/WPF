<Page x:Class="Учебное_Заведение.Admin_pages.Students"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебное_Заведение.Admin_pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Students">

    <Border CornerRadius="15" Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Управление студентами"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#0078D7"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

            <!-- Выбор студента -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Выберите студента:" VerticalAlignment="Center"/>
                <ComboBox x:Name="StudentComboBox"
                      Width="300"
                      Margin="10,0,0,0"
                      DisplayMemberPath="ФИО"
                      SelectedValuePath="ID_Студента"
                      SelectionChanged="StudentComboBox_SelectionChanged"/>
            </StackPanel>

            <Label Grid.Row="2" Content="ФИО:"/>
            <TextBox x:Name="FullNameTextBox" Grid.Row="3" Margin="0,0,0,10"/>

            <Label Grid.Row="4" Content="Группа:"/>
            <ComboBox x:Name="GroupComboBox"
                  Grid.Row="5"
                  Width="250"
                  Margin="0,0,0,10"
                  DisplayMemberPath="Название_Группы"
                  SelectedValuePath="ID_Группы"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="120" Margin="5" Background="#0078D7" Foreground="White" Click="SaveButton_Click"/>
                <Button Content="Новый" Width="120" Margin="5" Background="#0078D7" Foreground="White" Click="NewButton_Click"/>
                <Button Content="Удалить" Width="120" Margin="5" Background="#D9534F" Foreground="White" Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
