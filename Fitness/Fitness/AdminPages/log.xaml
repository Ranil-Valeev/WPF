<Page x:Class="Fitness.AdminPages.log"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="log">

    <Grid>
        <StackPanel>
            <ComboBox x:Name="ClientComboBox" Background="Aqua"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id_клиента"
                      SelectionChanged="ClientComboBox_SelectionChanged"
                      Height="30"
                      Margin="0,0,0,10"/>
            <DataGrid x:Name="JournalDataGrid" Background="Aqua"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="440">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Действие" Binding="{Binding Действие}" Width="*" />
                    <DataGridTextColumn Header="Дата и время" Binding="{Binding Дата_и_время}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
