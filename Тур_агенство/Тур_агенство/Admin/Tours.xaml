<Page x:Class="Тур_агенство.Admin.Tours"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тур_агенство.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="800"
      Title="Tours">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <Label Content="Выберите тур:" VerticalAlignment="Center"/>
            <ComboBox x:Name="TourComboBox" Width="400" Margin="10,0,0,0"
                  DisplayMemberPath="Название" SelectionChanged="TourComboBox_SelectionChanged"/>
        </StackPanel>

        <Label Grid.Row="1" Content="Название:"/>
        <TextBox x:Name="TourNameTextBox" Grid.Row="2" Margin="0,0,0,10"/>

        <Label Grid.Row="3" Content="Описание:"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Margin="0,0,0,10" 
             Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Label Grid.Row="5" Content="Цена:"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="6" Margin="0,0,0,10"/>

        <Label Grid.Row="7" Content="Город:"/>
        <ComboBox x:Name="CityComboBox" Grid.Row="8" Margin="0,0,0,10" DisplayMemberPath="Название"/>

        <Grid Grid.Row="9" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <Label Content="Дата начала:"/>
                <DatePicker x:Name="StartDatePicker"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <Label Content="Дата окончания:"/>
                <DatePicker x:Name="EndDatePicker"/>
            </StackPanel>
        </Grid>

        <Label Grid.Row="10" Content="Фото:"/>
        <StackPanel Grid.Row="11" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="PhotoTextBox" Width="300" IsReadOnly="True"/>
            <Button Content="Выбрать фото" Width="120" Margin="10,0,0,0" 
                Background="#2C3E50" Foreground="White" Click="SelectPhotoButton_Click"/>
        </StackPanel>

        <Image x:Name="PhotoPreview" Grid.Row="12" Height="150" Margin="0,0,0,10" 
           Stretch="Uniform" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,63">
            <Button Content="Сохранить" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="SaveButton_Click"/>
            <Button Content="Новый" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="NewButton_Click"/>
            <Button Content="Удалить" Width="120" Margin="5" Background="#2C3E50" Foreground="White" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
