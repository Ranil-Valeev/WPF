<Page x:Class="Steam.Pages.TOP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TOP">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Топ игр по среднему рейтингу отзывов" 
               FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" x:Name="TopGamesDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Место" Binding="{Binding Position}" Width="Auto"/>
                <DataGridTextColumn Header="Название игры" Binding="{Binding GameName}" Width="*"/>
                <DataGridTextColumn Header="Средний рейтинг" Binding="{Binding AverageRating, StringFormat=N1}" Width="Auto"/>
                <DataGridTextColumn Header="Количество отзывов" Binding="{Binding ReviewCount}" Width="Auto"/>
                <DataGridTemplateColumn Header="Рейтинг" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding AverageRating}" Maximum="10" Height="20" Width="100"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
