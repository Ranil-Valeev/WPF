<Page x:Class="Steam.Pages.Company"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="540"
      Title="Company">

    <Grid>
        <Border CornerRadius="20" BorderBrush="Transparent" Background="#ADD8E6">
            <ItemsControl ItemsSource="{Binding ServiceCategories}" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15" Margin="10" Background="Aqua" CornerRadius="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Image Source="{Binding GetPhoto}" Width="80" Height="80" Margin="5" />
                                <TextBlock Text="{Binding Название}" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding Страна}" Margin="5" HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding Год}" Margin="5" HorizontalAlignment="Center" />
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Button Content="Игры" Background="White" Click="DetailsButton_Click" CommandParameter="{Binding}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Page>
