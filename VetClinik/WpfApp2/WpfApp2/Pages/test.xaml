<Page x:Class="WpfApp2.Pages.test"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="491"
      Title="test">

    <Grid Background="#FFC864">
        <Border CornerRadius="20" BorderBrush="Transparent" Background="#FFC864">
            <DataGrid x:Name="PhotosGrid" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFC864">
                <DataGrid.Columns >
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <Image Source="{Binding Фото}" 
                                Width="100" 
                                Height="100"
                                MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
